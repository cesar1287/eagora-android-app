<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/service"
    tools:context="harmonytech.praagoraa.view.UsersCategoryActivity">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="praAgora"
            android:textStyle="bold"
            android:textSize="70dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBackground"
            android:layout_marginBottom="110dp"/>

        <harmonytech.praagoraa.controller.custom_widgets.MyCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Em qual opção sua necessidade se encaixa?"
            android:textStyle="bold"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="@color/colorBackground"
            android:layout_marginBottom="35dp"/>

        <Button
            android:id="@+id/category_client"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Cliente"
            android:layout_gravity="center"
            android:onClick="button_client"/>

        <Button
            android:id="@+id/category_provider"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="Prestador"
            android:layout_gravity="center"
            android:onClick="buttonProvider"/>

    </LinearLayout>

</RelativeLayout>
